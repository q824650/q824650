@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Ошибка</title>
    </head>
    <body>
        <h2>Произошла ошибка</h2>
        <textarea style="width:80%;height:500px">
Controller: '@Model.ControllerName' @Environment.NewLine
Action: '@Model.ActionName' @Environment.NewLine
Exception: @Model.Exception
        </textarea>
    </body>
</html>