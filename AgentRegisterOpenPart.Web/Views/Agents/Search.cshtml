@model AgentRegisterOpenPart.Web.Models.AgentsSearchViewModel

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('.agent-name-link').click(function (e) {
                $('.agent-details').hide();
                $(this).next('.agent-details').show();
                e.preventDefault();
            });
        });

    </script>
}

@section styles
{
    <style type="text/css">
        .agent-name-link
        {
            text-decoration: underline;
            cursor: pointer;
        }

        .agent-details
        {
            margin: 17px 0px 17px 0px;
        }

        #agents-search-result
        {
            margin: 15px 20px;
        }

        #agents-search-result li
        {
            margin: 3px 0px 3px 0px;
        }

        #main input[type="text"]
        {
            font: 16px arial,sans-serif;
            padding: 2px 5px;
        }

        #main td
        {
            background-color: transparent;
            vertical-align: middle;
            padding: 0px;
        }

        #main *
        {
            box-sizing: border-box;
        }

        /*#main *
        {
            border:1px solid lightgreen;
        }*/
    </style>
}

<div id="main" style="max-width: 580px">

    <h1>Реестр агентов</h1>

    @using (Html.BeginForm())
    {
        <div>
            <table style="width: 100%">
                <tr>
                    <td>
                        <p style="text-align: justify;">Для получения информации о страховом агенте, введите, пожалуйста, его имя или номер сертификата (свидетельства).</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="text" id="SearchText" name="SearchText" maxlength="50" style="width:100%" value="@Model.SearchText" />
                    </td>
                </tr>


                @if (ViewBag.Error != null)
                {
                    <tr>
                        <td>
                            <br />
                            <div style="color: #f00; font-weight: bold;">
                                @ViewBag.Error
                            </div>
                        </td>
                    </tr>
                }

            </table>

            @Html.Partial("_Captcha", Model.CaptchaImage)

            <br />

            <div class="right" style="display: block">
                <div class="form_button">
                    <div>
                        <label for="ajaxSearch_submit">
                            <button type="submit">
                                Найти<img src="http://www.ins-union.ru/css/images/login.gif">
                            </button>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Agents != null && Model.Agents.Count > 0)
    {
        <br />
        <div>
            <ol id="agents-search-result">
                @foreach (AgentRegisterOpenPart.Web.Models.Agent agent in Model.Agents)
                {
                    <li>
                        <a class="agent-name-link">@agent.LastName @agent.FirstName @agent.MiddleName</a>, @agent.FirmWhereWorks, свидетельство № @agent.CertificateNr

                        <div class="agent-details" style="display: none">
                            <div>
                                Дата включения в реестр: @AgentRegisterOpenPart.Web.Utils.DateTimeHelper.ToDateString(agent.DateIncludedInRegister)
                            </div>
                            <div>
                                Статус: @agent.Status
                            </div>
                            <div>
                                Номер в реестре: @agent.NrInRegister
                            </div>
                            <div>
                                Работает на территории: @agent.TerritoryWhereWorks
                            </div>
                            <div>
                                Проходил обучение: @agent.FirmWhereStudied
                            </div>
                            <div>
                                Срок действия записи: @AgentRegisterOpenPart.Web.Utils.DateTimeHelper.ToDateString(@agent.RecordValidDeadline)
                            </div>
                        </div>
                    </li>
                }
            </ol>
        </div>
    }

</div>





